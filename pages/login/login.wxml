<view wx:if="{{canIUse}}">
    <view class="header">
        <image src="{{login_pic}}"></image>
    </view>
    <view class='content'>
        <view>申请获取以下权限</view>
        <text>获得你的公开信息(昵称，头像等)</text>
    </view>
    <button class="loginBtn" wx:if="{{!hasUserInfo && canIUse}}"
            open-type="getUserInfo"
            bindgetuserinfo="getUserInfo">授权登录</button>
</view>